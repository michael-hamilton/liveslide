extends layout

block content
    link(rel="stylesheet" type="text/css" href="/css/open-iconic-bootstrap.min.css")
    link(rel="stylesheet" type="text/css" href="/pell/pell.min.css")
    link(rel="stylesheet" type="text/css" href="/css/maker.css")

    div.container-fluid
        include partials/flash-alerts
        div.row
            div.col-lg-3.col-md-4.col-sm-5.col-12
                div.btn-group
                    button#add-slide.btn.btn-dark(onClick="m.addSlide()")
                        span(aria-hidden="true").oi.oi-plus
                        | &nbsp;
                        | add
                    button.btn.btn-secondary(onclick="m.loadPresentation()")
                        span(aria-hidden="true").oi.oi-hard-drive
                        | &nbsp;
                        | load
                    button.btn.btn-primary(onclick="m.savePresentation()")
                        span(aria-hidden="true").oi.oi-hard-drive
                        | &nbsp;
                        | save
                    button.btn.btn-success(onclick="m.startPresentation()")
                        span(aria-hidden="true").oi.oi-monitor
                        | &nbsp;
                        | present
            div.col-lg-5.col-md-4.col-sm-3.col-6
                div.form-group
                    input#presentationID.form-control(type="text" placeholder="presentation id" name="presentationID" onchange="m.updatePresentationID(this)" value=presentationID)
            div.col-lg-4.col-md-4.col-sm-4.col-6
                div.form-group
                    input#presentation-name.form-control(type="text" placeholder="presentation name" name="presentationName" onchange="m.updatePresentationName(this)")
        div.row
            div.col-lg-3.col-md-4.col-sm-5.slides-container
                ul#slides-list.slides-list
            div.col-lg-9.col-md-8.col-sm-7
                div.row
                    div.col-md-12
                        div.form-group
                            div(id="slide-data")
                            div
                                pre(id="html-output")

    script(src="/pell/pell.js")
    script(src="/js/maker.js")